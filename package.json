{
  "name": "electron-heart",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build:electron": "tsc -p tsconfig.electron.json",
    "electron": "wait-on tcp:5173 && npm run build:electron && electron dist-electron/main.js",
    "start": "concurrently -k \"npm:dev\" \"npm:electron\"",
    "build": "vite build && npm run build:electron"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^9.2.1",
    "electron": "^29.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.4",
    "wait-on": "^7.2.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}